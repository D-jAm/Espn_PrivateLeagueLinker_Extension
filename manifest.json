{
  "manifest_version": 3,
  "name": "How We Lookin - ESPN Cookie Helper",
  "version": "1.0.1",
  "description": "Extract ESPN Fantasy Football authentication cookies to sync your private leagues with How We Lookin",
  "author": "How We Lookin",

  "permissions": [
    "cookies"
  ],

  "host_permissions": [
    "https://fantasy.espn.com/*",
    "https://*.espn.com/*"
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Extract ESPN Cookies"
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
